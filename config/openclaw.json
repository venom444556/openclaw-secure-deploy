{
  "gateway": {
    "mode": "local",
    "bind": "lan",
    "port": 18789,
    "auth": {
      "mode": "password"
    }
  },

  "channels": {
    "whatsapp": {
      "dmPolicy": "pairing",
      "allowFrom": []
    },
    "telegram": {
      "dmPolicy": "pairing",
      "allowFrom": []
    },
    "discord": {
      "dmPolicy": "pairing"
    }
  },

  "agents": {
    "defaults": {
      "model": {
        "primary": "anthropic/claude-opus-4-5"
      },
      "sandbox": {
        "mode": "non-main"
      }
    }
  },

  "tools": {
    "deny": ["browser", "canvas", "cron"]
  },

  "logging": {
    "level": "info",
    "file": "~/.openclaw/logs/gateway.log"
  }
}
