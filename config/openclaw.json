{
  "gateway": {
    "mode": "local",
    "bind": "lan",
    "port": 18789,
    "auth": {
      "mode": "token"
    }
  },

  "channels": {
    "whatsapp": {
      "dmPolicy": "pairing",
      "allowFrom": []
    },
    "telegram": {
      "dmPolicy": "pairing",
      "allowFrom": []
    },
    "discord": {
      "dmPolicy": "pairing"
    }
  },

  "agents": {
    "defaults": {
      "model": {
        "primary": "anthropic/claude-haiku-4-5"
      },
      "sandbox": {
        "mode": "non-main"
      }
    }
  },

  "tools": {
    "deny": ["browser", "canvas", "cron"]
  },

  "plugins": {
    "entries": {
      "diagnostics-otel": { "enabled": true }
    }
  },

  "diagnostics": {
    "enabled": true,
    "otel": {
      "enabled": true,
      "endpoint": "http://pgpclaw-prometheus:9090/api/v1/otlp",
      "protocol": "http/protobuf",
      "serviceName": "openclaw-gateway",
      "metrics": true,
      "traces": false,
      "logs": false,
      "flushIntervalMs": 15000
    }
  },

  "logging": {
    "level": "info",
    "file": "~/.openclaw/logs/gateway.log"
  }
}
