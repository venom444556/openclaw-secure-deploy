# =============================================================
# OpenClaw Secure Deployment — Environment Variables
# Copy to .env and fill in values. NEVER commit .env to git.
# =============================================================

# ── AI Model API Keys ─────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-CHANGE_ME
OPENAI_API_KEY=sk-CHANGE_ME_OR_DELETE

# ── Channel Bot Tokens ────────────────────────────────────────
TELEGRAM_BOT_TOKEN=CHANGE_ME
DISCORD_BOT_TOKEN=CHANGE_ME

# ── OpenClaw Gateway ──────────────────────────────────────────
OPENCLAW_GATEWAY_PORT=18789
OPENCLAW_AUTH_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD

# ── Grafana Dashboard ────────────────────────────────────────
# Use a DIFFERENT password than the gateway auth password
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_DIFFERENT_FROM_GATEWAY

# ── Monitoring / Alerting ─────────────────────────────────────
# Optional: Slack webhook for incident alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/CHANGE_ME

# Optional: Email for billing/cost alerts
ALERT_EMAIL=your@email.com

# ── Backup ────────────────────────────────────────────────────
# Optional: S3 bucket for offsite backups
AWS_ACCESS_KEY_ID=CHANGE_ME
AWS_SECRET_ACCESS_KEY=CHANGE_ME
BACKUP_S3_BUCKET=CHANGE_ME

# ── Local AI (Ollama) ─────────────────────────────────────────
OLLAMA_HOST=http://localhost:11434
